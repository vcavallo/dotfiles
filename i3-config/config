# must install rofi!
# use rofi combo run/show window:
bindsym $mod+semicolon exec "rofi -combi-modi window,drun -show combi -modi combi -width 100 -padding 800 -opacity "85" -bw 0 -bc "$bg-color" -bg "$bg-color" -fg "$text-color" -hlbg "$bg-color" -hlfg "#9575cd" -font "System San Francisco Display 18""

# bindsym $mod+shift+semicolon exec rofi -show run -lines 3 -eh 2 -width 100 -padding 800 -opacity "85" -bw 0 -bc "$bg-color" -bg "$bg-color" -fg "$text-color" -hlbg "$bg-color" -hlfg "#9575cd" -font "System San Francisco Display 18"

# must install compton
exec_always compton -f

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)

bar {
        font pango:System San Francisco Display 10
        position top
        #status_command i3blocks
        status_command i3blocks -c ~/.config/i3/i3blocks.conf
        colors {
          background $bg-color
          separator #757575
          #                   border              bg               text
          focused_workspace   $bg-color           $bg-color        $text-color
          inactive_workspace  $inac-bg-color      $inac-bg-color   $inac-text-color
          urgent_workspace    $urgent-bg-color    $urgent-bg-color $text-color
        }
}
